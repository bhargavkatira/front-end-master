<link rel="stylesheet" href="./https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
     <!-- navbar -->
     <header>
        <div id="navbar"></div>
   </header>

    <div id="head">
        <h1 style="margin-left: 55px;">My Account</h1>
       
        <div id="main">
            <div id="sidebar"></div>
  
            <div id="Right">
             <h1>Invoice Address</h1>
             <input type="checkbox" id="myCheck" onclick="myFunction()">
             <label style="color: white;">Show Company Info on Invoices?</label>
            
             <div id="text" style="display:none">
                <form action="" class="form2">
                    
    
                   
    
                    <div class="mail">
                        <p>Company Name</p>
                        <input type="text" class="a">
                    </div> 
    
                    <div class="mail" style="margin-top: 60px;">
                        <p>Street Address</p>
                        <input type="text" class="a">
                        <input style="margin-top: 20px;" type="text" class="a">
                        <input style="margin-top: 20px;" type="text" class="a">
                        
                    </div> 
    
             
                    
                    
                 </form>


            </div>
            <div> <input  class="btn" type="submit" value="Update"></div>
            </div>
   
       </div>
    </div>
    

    
    <!-- footer html -->

    <footer>
        <div id="foot"></div>
    </footer>


    <!-- Chat-boat-coad -->

    <div class="chat-bar-collapsible">

        <button id="chat-button" type="button" class="collapsible">
            <i id="chat-icon" style="color: #fff;" class="fa fa-fw fa-comments-o"></i>
        </button>

        <div class="content">
            
              <!-- bot-header -->
              <div class="bot-header"><img src="https://static.frontendmasters.com/assets/fm/js/static/frontendmasters.e1e10b58c1.svg"></div>

            <div class="full-chat-block">
                
                <!-- Message Container -->
                <div class="outer-container">

              

                    <div class="chat-container">
                        <!-- Messages -->
                        <div id="chatbox">
                            <h5 id="chat-timestamp"></h5>
                            <p id="botStarterMessage" class="botText"><span>Loading...</span></p>
                        </div>

                        <!-- User input box -->
                        <div class="chat-bar-input-block">
                            <div id="userInput">
                                <input id="textInput" class="input-box" type="text" name="msg"
                                    placeholder="Write a reply..">
                                <p></p>
                            </div>

                            <div class="chat-bar-icons">
                                
                                <i id="chat-icon" style="color: #333;" class="fa fa-fw fa-send"
                                    onclick="sendButton()"></i>
                            </div>
                        </div>

                        <div id="chat-bar-bottom">
                            <p></p>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>

</body>
</html>
<script src="JavaScript/import.js" type="module"></script>
